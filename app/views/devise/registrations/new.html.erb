<div class='login-signin'>
  <div class='sign-in-box'>
    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :autocomplete => "off"}) do |f| %>
      <%= devise_error_messages! %>

      <div class=''>
        <%= f.label :first_name, :class => 'label' %><br />
        <%= f.text_field :first_name %>
      </div>

      <div class=''>
        <%= f.label :last_name, :class => 'label' %><br />
        <%= f.text_field :last_name %>
      </div>

      <div class=''>
        <%= f.label :email, :class => 'label' %><br />
        <%= f.email_field :email %>
      </div>

      <div class=''>
        <%= f.label :password, :class => 'label' %><br />
        <%= f.password_field :password %>
      </div>

      <div class=''>
        <%= f.label :password_confirmation, :class => 'label' %><br />
        <%= f.password_field :password_confirmation %>
      </div>

      <div><%= f.submit "Sign up", :class => 'sign-in-btn' %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>