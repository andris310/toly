<div id='product'>

  <div id='product-image'>
    <%= image_tag(@product.image_url, class: 'product-image') %>
  </div>

  <div id='product-title'>
    <h2><%= @product.title %></h2>
  </div>

  <div id='product-description'>
    <%= @product.description %>

    <div id='product-price'>
      <strong>Price:</strong>
      <%= @product.price %>
    </div>
  </div>
</div>
