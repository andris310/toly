<div id='product'>

  <div id='product-image'>
    <%= image_tag @product.image.url(:large).to_s, class: 'product-image' %>
  </div>

  <div id='product-title'>
    <h2><%= @product.title %></h2>
  </div>

  <div id='product-description'>
    <%= sanitize(@product.description) %>

    <div id='product-price'>
      <strong>Price:</strong>
      <span class='price'><%= number_to_currency(@product.price) %></span>
    </div>
    <div class='add-to-cart'>
      <%= button_to '+ Add to Cart', line_items_path(product_id: @product), remote: true, :class => 'add-to-cart-btn' %>
    </div>

    <%= link_to 'Download', download_product_path(@product), class: "" %>

  </div>
</div>
