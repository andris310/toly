<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>

  <div class="field">
    <%= image_tag(@product.image.thumb.url) if @product.image? %>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 6 %>
  </div>

  <div class='field'>
    <%= f.label :wistia_preview %><br>
    <span>IMPORTANT! Use embed tag from Wistia for video preview !EXCLUDE! "script" tag</span><br>
    <%= f.text_area :wistia_preview %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :category %><br>
    <%= f.select(:category, options_for_select([['Spine Health Video', '1'], ['Other Product', '2']]), prompt: 'Select...') %>
  </div>

  <div class="field">
    <%= f.label :is_downloadable %><br>
    <%= f.select(:is_downloadable, options_for_select([['Not Downloadable', false], ['Downloadable', true]], :is_downloadable)) %>
  </div>

  <div id="select-downloadable" class="field hidden">
    <% Video.order(:name).each do |video| %>
      <div>
        <%= check_box_tag "#{f.object_name}[video_ids][]", video.id, f.object.videos.include?(video) %>
        <%= video.name %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :shipping %><br>
    <%= f.text_field :shipping %>
  </div>

  <div class="field">
    <%= f.label :visible %>
    <%= f.check_box :visible %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
