
  <%= form_for(@order) do |f| %>
    <% if @order.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.hidden_field :stripe_card_token %>

    <div class="field">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name, size: 40 %>
    </div>
    <div class="field">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name, size: 40 %>
    </div>

    <% if @cart.is_downloadable? %>
      <p>'Downloadable Files don't need shipping!</p>
    <% else %>
      <div class="field">
        <%= f.label :address %><br>
        <%= f.text_field :address, size: 40 %>
      </div>
      <div class="field">
        <%= f.label :city %><br>
        <%= f.text_field :city, size: 40 %>
      </div>
       <div class="field">
        <%= f.label :state %><br>
        <%= f.select :state, Order::STATES, prompt: 'State' %>
      </div>
       <div class="field">
        <%= f.label :zipcode %><br>
        <%= f.text_field :zipcode, size: 5 %>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email, size: 40 %>
    </div>

    <% if @order.stripe_card_token.present? %>
      Credit card has been provided.
    <% else %>
      <div class="field">
        <%= label_tag :card_number, "Credit Card Number" %>
        <%= text_field_tag :card_number, nil, name: nil %>
      </div>
      <div class="field">
        <%= label_tag :card_code, "Security Code on Card (CVV)" %>
        <%= text_field_tag :card_code, nil, name: nil %>
      </div>
      <div class="field">
        <%= label_tag :card_month, "Card Expiration" %>
        <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
        <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
      </div>
      <% end %>

      <div id="stripe_error">
        <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
      </div>

    <div class="submit-area actions">
      <%= f.submit 'Place Order', :id => 'submit-btn' %>
    </div>
  <% end %>

