
  <%= form_for(@order, :html => {:class => 'FlowupLabels'} ) do |f| %>
    <% if @order.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.hidden_field :stripe_card_token %>
    <%= f.hidden_field :entered_code %>
    <div class='customer-info'>
      <div class="field fl_wrap">
        <%= f.label :first_name, :class => 'fl_label' %>
        <%= f.text_field :first_name, size: 35, :class => 'fl_input' %>
      </div>
      <div class="field fl_wrap">
        <%= f.label :last_name, :class => 'fl_label' %>
        <%= f.text_field :last_name, size: 35, :class => 'fl_input' %>
      </div>

      <div class="field fl_wrap">
        <%= f.label :address, :class => 'fl_label' %>
        <%= f.text_field :address, size: 35, :class => 'fl_input' %>
      </div>
      <div class="field fl_wrap">
        <%= f.label :city, :class => 'fl_label' %>
        <%= f.text_field :city, size: 35, :class => 'fl_input' %>
      </div>
       <div class="field">
        <%= f.label :state %>
        <%= f.select :state, Order::STATES, prompt: 'State' %>
      </div>
       <div class="field fl_wrap">
        <%= f.label :zipcode, :class => 'fl_label' %>
        <%= f.text_field :zipcode, size: 5, :class => 'fl_input' %>
      </div>

      <div class="field fl_wrap">
        <%= f.label :email, :class => 'fl_label' %>
        <%= f.email_field :email, size: 35, :class => 'fl_input' %>
      </div>
    </div>

    <div class='billing-info'>
      <div class="field fl_wrap">
        <%= label_tag :card_number, nil, class: 'fl_label' %>
        <%= text_field_tag :card_number, nil, name: nil, size: 23, :class => 'fl_input' %>
      </div>
      <div class="field fl_wrap">
        <%= label_tag :card_code, nil, class: 'fl_label' %>
        <%= text_field_tag :card_code, nil, name: nil, size: 2, maxlength: 3, :class => 'fl_input' %>
      </div>

      <div class="field fl_wrap">
        <%= label_tag :card_month, "Card Expiration" %>
        <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
        <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
      </div>


        <div id="stripe_error">
          <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
        </div>

        <div class="submit-area actions">
          <%= f.submit 'Place Order', :id => 'submit-btn' %>
        </div>
      </div>

  <% end %>


