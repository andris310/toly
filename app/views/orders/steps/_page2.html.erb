<div class='checkout-header'>
  <h2>Stripe Billing Info</h2>
</div>

<%= f.hidden_field :stripe_card_token %>

<div class='billing-info'>

  <div class="field fl_wrap">
    <%= label_tag :billing_first_name, nil, class: 'fl_label' %>
    <%= text_field_tag :billing_first_name, nil, size: 35, :class => 'fl_input' %>
  </div>
  <div class="field fl_wrap">
    <%= label_tag :billing_last_name, nil, class: 'fl_label' %>
    <%= text_field_tag :billing_last_name, nil, size: 35, :class => 'fl_input' %>
  </div>

  <div class="field fl_wrap">
    <%= label_tag :billing_address, nil, class: 'fl_label' %>
    <%= text_field_tag :billing_address, nil, size: 35, :class => 'fl_input' %>
  </div>
  <div class="field fl_wrap">
    <%= label_tag :billing_city, nil, class: 'fl_label' %>
    <%= text_field_tag :billing_city, nil, size: 35, :class => 'fl_input' %>
  </div>
   <div class="field fl_wrap">
    <%= label_tag :billing_state %>
    <%= select_tag :billing_state, options_for_select(Order::STATES), prompt: 'State' %>
  </div>
   <div class="field fl_wrap">
    <%= label_tag :billing_zipcode, nil, class: 'fl_label' %>
    <%= text_field_tag :billing_zipcode, nil, maxlength: 5, :class => 'fl_input' %>
  </div>

  <div class="field fl_wrap">
    <%= label_tag :card_number, nil, class: 'fl_label' %>
    <%= text_field_tag :card_number, nil, name: nil, size: 23, :class => 'fl_input' %>
  </div>
  <div class="field fl_wrap">
    <%= label_tag :card_code, nil, class: 'fl_label' %>
    <%= text_field_tag :card_code, nil, name: nil, size: 2, maxlength: 3, :class => 'fl_input' %>
  </div>

  <div class="field fl_wrap">
    <%= label_tag :card_month, "Card Expiration" %>
    <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
    <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
  </div>


  <div id="stripe_error">
    <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
  </div>
</div>