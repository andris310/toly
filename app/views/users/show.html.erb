<%= @user.email %>
<ul class='user-orders'>
  <% @user.orders.each do |o| %>
    <li><spna>Date of the Order: <%= o.created_at.strftime("%d-%m-%Y %H:%M") %></span>
      <hr/>
      <table>
        <thead>
          <th></th>
          <th>Items purchased:</th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <% o.products.each do |p| %>
          <tr>
            <td></td>
            <td><%= p.title %></td>
            <td><%= number_to_currency(p.price) %></td>
            <td class='download-link'>
              <% if p.is_downloadable %>
                <%= link_to 'Download', download_product_path(p), class: "download-btn" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </li>
  <% end %>
</ul>