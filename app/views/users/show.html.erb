<%= @user.email %>
<ul class='user-orders'>
  <% @user.orders.each do |o| %>
    <li class='order-summary'><spna>Date of the Order: <%= o.created_at.strftime("%d-%m-%Y %H:%M") %></span>
      <hr/>
      <table>
        <thead>
          <th></th>
          <th>Items purchased:</th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <% o.products.each do |p| %>
          <tr>
            <td></td>
            <td><%= p.title %></td>
            <td><%= number_to_currency(p.price) %></td>
            <td class='download-link'>
              <% if p.is_downloadable %>
                <table>
                  <% p.videos.each do |video| %>
                    <tr>
                      <td class='video-name'><%= video.name %></td>
                      <td><%= link_to 'Download', download_video_path(video), class: "download-btn" %></td>
                    </tr>
                  <% end %>
                </table>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </li>
  <% end %>
</ul>