<div id='cart'>
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>

  <h2>Your Cart</h2>
  <table>
    <% @cart.line_items.each do |item| %>
      <tr>
        <td><%= item.quantity %>&times;</td>
        <td><%= item.product.title %></td>
        <td class='item-price'><%= number_to_currency(item.item_total_price) %></td>
        <td><%= link_to 'X', item, :method => :delete %></td>
      </tr>
    <% end %>

      <tr class='total-line'>
        <td colspan='2'>Total</td>
        <td class='total-cell'><%= number_to_currency(@cart.cart_total_price) %></td>
      </tr>
  </table>

  <%= button_to 'Empty Cart', @cart, method: :delete,
      data: { confirm: 'Are you sure?' } %>
</div>
